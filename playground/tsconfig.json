{
  "extends": "@gravity-ui/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "~transform/*": ["../lib/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
